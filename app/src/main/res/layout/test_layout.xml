<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView16" />

    <TextView
        android:text="Look Good Salon"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/textView16"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:id="@+id/textView17" />

    <TextView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/cancel"
        android:layout_marginRight="5dp"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <TextView
        android:text=""
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignLeft="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginBottom="11dp"
        android:id="@+id/gender" />

    <TextView
        android:text="Rating"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gender"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel"
        android:layout_marginRight="42dp"
        android:layout_marginEnd="42dp"
        android:id="@+id/textView20" />

    <TextView
        android:text=""
        android:textSize="18dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rating"
        android:layout_alignBottom="@+id/textView20"
        android:layout_toLeftOf="@+id/cancel"
        android:layout_toStartOf="@+id/cancel"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp" />

    <TextView
        android:text=""
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/rating"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/textView22"
        />

    <TextView
        android:text="Address:"
        android:paddingLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/address"
        android:layout_alignBottom="@+id/textView16"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignLeft="@+id/textView19"
        android:layout_alignStart="@+id/textView19" />

    <TextView
        android:text=""
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/address"
        android:layout_marginTop="48dp"
        android:id="@+id/addresstext"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignLeft="@+id/address"
        android:layout_alignStart="@+id/address" />

    <TextView
        android:text="Running Token no"
        android:textSize="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_below="@+id/textView17"
        android:id="@+id/textView26"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignLeft="@+id/gender"
        android:layout_alignStart="@+id/gender" />

    <TextView
        android:text=""
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:id="@+id/token_no" />

    <TextView
        android:text="Running customers in Queue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="top|center"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        android:layout_below="@+id/textView26"
        android:layout_marginTop="10dp"
        android:id="@+id/textView19"
        android:layout_alignRight="@+id/textView16"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignLeft="@+id/textView26"
        android:layout_alignStart="@+id/textView26" />

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:layout_centerHorizontal="true"
        android:id="@+id/donut_progress"
        android:layout_below="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:id="@+id/running_customer" />

    <Button
        android:text="Book Now"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/booknow"
        android:layout_alignBottom="@+id/textView19"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />


</RelativeLayout>


